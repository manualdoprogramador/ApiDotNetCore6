VALUES('Busca de pessoa','BuscaPessoa');

INSERT INTO PERMISSAO(NOMEVISUAL, NOMEPERMISSAO)
VALUES('Deleta de pessoa','DeletaPessoa');

INSERT INTO PERMISSAO(NOMEVISUAL, NOMEPERMISSAO)
VALUES('Edita de pessoa','EditaPessoa');

INSERT INTO PERMISSAOUSUARIO (IDUSUARIO,IDPERMISSAO)
VALUES(1,1);

