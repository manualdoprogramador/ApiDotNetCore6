ALTER TABLE USUARIO add PRIMARY KEY(idUsuario)

CREATE TABLE PERMISSAO (
  IDPERMISSAO SERIAL,  
  NOMEVISUAL VARCHAR(150),
  NOMEPERMISSAO VARCHAR(150),
  PRIMARY KEY (IDPERMISSAO)
);

CREATE TABLE PERMISSAOUSUARIO (
  IDPERMISSAOUSUARIO SERIAL,  
  IDUSUARIO INT,
  IDPERMISSAO INT,
  PRIMARY KEY (IDPERMISSAOUSUARIO),
  FOREIGN KEY (IDUSUARIO)
      REFERENCES USUARIO (IDUSUARIO),
  FOREIGN KEY (IDPERMISSAO)
      REFERENCES PERMISSAO (IDPERMISSAO)	
);

INSERT INTO PERMISSAO(NOMEVISUAL, NOMEPERMISSAO)
VALUES('Administrador','Admin');

INSERT INTO PERMISSAO(NOMEVISUAL, NOMEPERMISSAO)
VALUES('Cadastro de pessoa','CadastraPessoa');

